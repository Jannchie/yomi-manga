    "sync": "pnpm --filter ./packages/api sync",
    "docker:build-push": "bash ./scripts/docker-build-push.sh"
  },
  "devDependencies": {
    "@jannchie/eslint-config": "^3.7.5",
    "eslint": "^9.39.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  }
}
