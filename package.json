{
  "name": "yomi-manga",
  "type": "module",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:api": "pnpm --filter ./packages/api dev",
    "dev:web": "pnpm --filter ./packages/web dev",
    "build": "pnpm -r build",
    "lint": "eslint .",
